<?xml version="1.0"?>
<root main_tree_to_execute="RMUL2024">
  <!-- ///// 此树用于2024联盟赛 ///// -->
  <BehaviorTree ID="RMUL2024">
    <Fallback>
      <Sequence>

        <Condition ID="gameStart"/>

        <Fallback>

          <Sequence>
            <Condition ID="gameAboutOver"/>
            <Condition ID="baseFailed"/>
            <Inverter>
              <Condition ID="lowBullets"/>
            </Inverter>
            <Action ID="SetLeftTarget" service_name="aim_target_l"
              list="{list}" 
            />
            <Action ID="SetRightTarget" service_name="aim_target_r"
              list="{list}" 
            />
            <Fallback>
              <Sequence>
                <Condition ID="haveTarget"/>
                <Action ID="SetNavTarget" service_name="nav_target"
                  have_target="{have_target}" 
                  gimbal="{gimbal}" 
                  target_pos="{target_pos}"
                />
              </Sequence>
              <Action ID="RmulGoEnemyBase" service_name="nav_goal"/>
              <Condition ID="gameStart"/> <!-- TODO : 强制正确 -->
            </Fallback>
          </Sequence>

          <Sequence>
            <Condition ID="lowHp"/>
            <Condition ID="rmulCanSupply"/>
            <Fallback>
              <Action ID="RmulGoSupply" service_name="nav_goal"/>
            <Condition ID="gameStart"/> <!-- TODO : 强制正确 -->
            </Fallback>
          </Sequence>

          <Sequence>
            <Condition ID="lowHp"/>
            <Fallback>
              <Action ID="RmulDefense" service_name="nav_goal"/>
              <Condition ID="gameStart"/> <!-- TODO : 强制正确 -->
            </Fallback>
          </Sequence>

          <Sequence>
            <Condition ID="lowBullets"/>
            <Fallback>
              <Action ID="RmulDefense" service_name="nav_goal"/>
              <Condition ID="gameStart"/> <!-- TODO : 强制正确 -->
            </Fallback>
          </Sequence>

          <Sequence>
            <Condition ID="haveTarget"/>
            <Action ID="SetNavTarget" service_name="nav_target"
              have_target="{have_target}" 
              gimbal="{gimbal}" 
              target_pos="{target_pos}"
            />
          </Sequence>

          <Fallback>
            <Action ID="RmulPatrol" service_name="nav_goal"/>
            <Condition ID="gameStart"/> <!-- TODO : 强制正确 -->
          </Fallback>

        </Fallback>
        
      </Sequence>

      <Action ID="GoBack" service_name="nav_goal"/>
    </Fallback>
  </BehaviorTree>

</root>
