<?xml version="1.0"?>
<root main_tree_to_execute="RMUL2024">
  <!-- ///// 此树用于2024联盟赛 ///// -->
  <BehaviorTree ID="RMUL2024">
    <Fallback>
      <Sequence>

        <Condition ID="gameStart"/>

        <Fallback>

          <Sequence>
            <Inverter>
              <Condition ID="outpostSurvives"/>
            </Inverter>
            <Inverter>
              <Condition ID="baseUnfolds"/>
            </Inverter>
            <Fallback>
              <Action ID="RmucAvoid" service_name="nav_goal"/>
              <Condition ID="gameStart"/> <!-- TODO : 强制正确 -->
            </Fallback>
          </Sequence>

          <Sequence>
            <Condition ID="inSupply"/>
            <Inverter>
              <Condition ID="enoughHp"/>
            </Inverter>
            <Fallback>
              <Action ID="RmucGoSupply" service_name="nav_goal"/>
              <Condition ID="gameStart"/> <!-- TODO : 强制正确 -->
            </Fallback>
          </Sequence>

          <Sequence>
            <Condition ID="lowHp"/>
            <Fallback>
              <Action ID="RmucGoSupply" service_name="nav_goal"/>
            <Condition ID="gameStart"/> <!-- TODO : 强制正确 -->
            </Fallback>
          </Sequence>

          <Sequence>
            <Condition ID="lowBullets"/>
            <Fallback>
              <Action ID="RmucAvoid" service_name="nav_goal"/>
              <Condition ID="gameStart"/> <!-- TODO : 强制正确 -->
            </Fallback>
          </Sequence>

          <Sequence>
            <Condition ID="haveTarget"/>
            <Action ID="SetNavTarget" service_name="nav_target"
              have_target="{have_target}" 
              gimbal="{gimbal}" 
              target_pos="{target_pos}"
            />
          </Sequence>

          <Fallback>
            <Action ID="RmulPatrol" service_name="nav_goal"/>
            <Condition ID="gameStart"/> <!-- TODO : 强制正确 -->
          </Fallback>

        </Fallback>
        
      </Sequence>

      <Action ID="GoBack" service_name="nav_goal"/>
    </Fallback>
  </BehaviorTree>

</root>
