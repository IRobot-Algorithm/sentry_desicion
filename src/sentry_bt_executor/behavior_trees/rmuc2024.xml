<?xml version="1.0"?>
<root main_tree_to_execute="RMUL2024">
  <!-- ///// 此树用于2024联盟赛 ///// -->
  <BehaviorTree ID="RMUL2024">
    <Fallback>
      <Sequence>

        <Condition ID="gameStart"/>

        <Fallback>

          <!-- 一、云台手要求——强制待在巡逻区 -->
          <Sequence>
            <Condition ID="force_back"/>
            <Fallback>
              <!-- 1-设置目标 -->
              <Fallback>
                <!-- 敌方前哨站存活——ExceptSentry -->
                <Sequence>
                  <Condition ID="enemyOutpostSurvives"/>
                  <Action ID="SetLeftTarget" service_name="/rmos_processer_l/AimTarget_l"
                    list_name="ExceptSentry" 
                  />
                  <Action ID="SetRightTarget" service_name="/rmos_processer_r/AimTarget_r"
                    list_name="ExceptSentry" 
                  /> 
                </Sequence>
                <!-- 所有 -->
                <Sequence>
                  <Action ID="SetLeftTarget" service_name="/rmos_processer_l/AimTarget_l"
                    list_name="All" 
                  />
                  <Action ID="SetRightTarget" service_name="/rmos_processer_r/AimTarget_r"
                    list_name="All" 
                  /> 
                </Sequence>
              </Fallback>
              <!-- ^^^^^^^^^^^^^^^^^^^ -->
              <!-- 2-在巡逻区 有目标 -->
              <Sequence>
                <Condition ID="inPatrol"/>
                <Condition ID="haveTarget"/>
                <Action ID="SetStaticNavTarget" service_name="nav_target"
                  have_target="{have_target}" 
                  gimbal="{gimbal}" 
                  target_pos="{target_pos}"
                />
              </Sequence>
              <!-- ^^^^^^^^^^^^^^^^^^^ -->
              <!-- 3-不在巡逻区或者无目标 -->
              <Action ID="GoBack" service_name="nav_goal"/>
              <Condition ID="gameStart"/> <!-- TODO : 强制正确 -->
              <!-- ^^^^^^^^^^^^^^^^^^^ -->
            </Fallback>
          </Sequence>
          <!-- ///////////////// -->

          <!-- 二、前哨站未存活且基地护甲未展开且离开时间大于一定值——必须回巡逻区 -->
          <Sequence>
            <Inverter>
              <Condition ID="outpostSurvives"/>
            </Inverter>
            <Inverter>
              <Condition ID="baseUnfolds"/>
            </Inverter>
            <Condition ID="leaveTooLong"/>
            <Action ID="SetLeftTarget" service_name="/rmos_processer_l/AimTarget_l"
              list_name="None" 
            />
            <Action ID="SetRightTarget" service_name="/rmos_processer_r/AimTarget_r"
              list_name="None" 
            /> 
            <Fallback>
              <Action ID="GoBack" service_name="nav_goal"/>
              <Condition ID="gameStart"/> <!-- TODO : 强制正确 -->
            </Fallback>
          </Sequence>
          <!-- ///////////////// -->

          <!-- 三、如果在补给区并且可以补给弹丸——补给弹丸 -->
          <Sequence>
            <Condition ID="inSupply"/>
            <Condition ID="canBuyBullets"/>
            <Action ID="SetLeftTarget" service_name="/rmos_processer_l/AimTarget_l"
              list_name="None" 
            />
            <Action ID="SetRightTarget" service_name="/rmos_processer_r/AimTarget_r"
              list_name="None" 
            /> 
            <Action ID="BuyBullets" service_name="buy_bullets"
              buy_bullets="{buy_bullets}" 
            />
          </Sequence>
          <!-- ///////////////// -->

          <!-- 四、如果在补给区且血量不充足——回补给区 -->
          <Sequence>
            <Condition ID="inSupply"/>
            <Inverter>
              <Condition ID="enoughHp"/>
            </Inverter>
            <Action ID="SetLeftTarget" service_name="/rmos_processer_l/AimTarget_l"
              list_name="None" 
            />
            <Action ID="SetRightTarget" service_name="/rmos_processer_r/AimTarget_r"
              list_name="None" 
            /> 
            <Fallback>
              <Action ID="RmucGoSupply" service_name="nav_goal"/>
              <Condition ID="gameStart"/> <!-- TODO : 强制正确 -->
            </Fallback>
          </Sequence>
          <!-- ///////////////// -->

          <!-- 五、如果需要解锁发射机构——回补给区 -->
          <Sequence>
            <Condition ID="needUnlock"/>
            <Action ID="SetLeftTarget" service_name="/rmos_processer_l/AimTarget_l"
              list_name="None" 
            />
            <Action ID="SetRightTarget" service_name="/rmos_processer_r/AimTarget_r"
              list_name="None" 
            /> 
            <Fallback>
              <Action ID="RmucGoSupply" service_name="nav_goal"/>
              <Condition ID="gameStart"/> <!-- TODO : 强制正确 -->
            </Fallback>
          </Sequence>
          <!-- ///////////////// -->

          <!-- 六、如果没弹丸且可以补给弹丸且（前哨站存活或基地装甲板展开）——回补给区 -->
          <Sequence>
            <Condition ID="lowBullets"/>
            <Condition ID="canBuyBullets"/>
            <Fallback>
              <Condition ID="outpostSurvives"/>
              <Condition ID="baseUnfolds"/>
            </Fallback>
            <Action ID="SetLeftTarget" service_name="/rmos_processer_l/AimTarget_l"
              list_name="None" 
            />
            <Action ID="SetRightTarget" service_name="/rmos_processer_r/AimTarget_r"
              list_name="None" 
            /> 
            <Fallback>
              <Action ID="RmucGoSupply" service_name="nav_goal"/>
              <Condition ID="gameStart"/> <!-- TODO : 强制正确 -->
            </Fallback>
          </Sequence>
          <!-- ///////////////// -->

          <!-- 七、如果血少——回补给区 -->
          <Sequence>
            <Condition ID="lowHp"/>
            <Action ID="SetLeftTarget" service_name="/rmos_processer_l/AimTarget_l"
              list_name="None" 
            />
            <Action ID="SetRightTarget" service_name="/rmos_processer_r/AimTarget_r"
              list_name="None" 
            /> 
            <Fallback>
              <Action ID="RmucGoSupply" service_name="nav_goal"/>
              <Condition ID="gameStart"/> <!-- TODO : 强制正确 -->
            </Fallback>
          </Sequence>
          <!-- ///////////////// -->

          <!-- 八、如果没弹丸——乱跑 -->
          <Sequence>
            <Condition ID="lowBullets"/>
            <Action ID="SetLeftTarget" service_name="/rmos_processer_l/AimTarget_l"
              list_name="None" 
            />
            <Action ID="SetRightTarget" service_name="/rmos_processer_r/AimTarget_r"
              list_name="None" 
            /> 
            <Fallback>
              <Action ID="RmucPatrol" service_name="nav_goal"/>
              <Condition ID="gameStart"/> <!-- TODO : 强制正确 -->
            </Fallback>
          </Sequence>
          <!-- ///////////////// -->

          <!-- 九、如果需要反前哨站且敌方前哨站存活——到台阶上 如果到台阶了且有目标——打 -->
          <Sequence>
            <Condition ID="counterOutpost"/>
            <Condition ID="enemyOutpostSurvives"/>
            <Action ID="SetLeftTarget" service_name="/rmos_processer_l/AimTarget_l"
              list_name="OnlyOutpost" 
            />
            <Action ID="SetRightTarget" service_name="/rmos_processer_r/AimTarget_r"
              list_name="OnlyOutpost" 
            /> 
            <Fallback>
              <Sequence>
                <Action ID="RmucGoEnemyOutpost" service_name="nav_goal"/>
                <Condition ID="haveTarget"/>
                <Action ID="SetStaticNavTarget" service_name="nav_target"
                  have_target="{have_target}" 
                  gimbal="{gimbal}" 
                  target_pos="{target_pos}"
                />
              </Sequence>
              <Condition ID="gameStart"/> <!-- TODO : 强制正确 -->
            </Fallback>
          </Sequence>
          <!-- ///////////////// -->

          <!-- 十、如果有目标——停下打 -->
          <Sequence>
            <Condition ID="haveTarget"/>
            <Action ID="SetStaticNavTarget" service_name="nav_target"
              have_target="{have_target}" 
              gimbal="{gimbal}" 
              target_pos="{target_pos}"
            />
            <Fallback>
              <!-- 敌方前哨站存活——ExceptSentry -->
              <Sequence>
                <Condition ID="enemyOutpostSurvives"/>
                <Action ID="SetLeftTarget" service_name="/rmos_processer_l/AimTarget_l"
                  list_name="ExceptSentry" 
                />
                <Action ID="SetRightTarget" service_name="/rmos_processer_r/AimTarget_r"
                  list_name="ExceptSentry" 
                /> 
              </Sequence>
              <!-- 所有 -->
              <Sequence>
                <Action ID="SetLeftTarget" service_name="/rmos_processer_l/AimTarget_l"
                  list_name="All" 
                />
                <Action ID="SetRightTarget" service_name="/rmos_processer_r/AimTarget_r"
                  list_name="All" 
                /> 
              </Sequence>
            </Fallback>
          </Sequence>
          <!-- ///////////////// -->

          <!-- 十一、巡逻 -->
          <Sequence>
            <Fallback>
              <!-- 敌方前哨站存活——ExceptSentry -->
              <Sequence>
                <Condition ID="enemyOutpostSurvives"/>
                <Action ID="SetLeftTarget" service_name="/rmos_processer_l/AimTarget_l"
                  list_name="ExceptSentry" 
                />
                <Action ID="SetRightTarget" service_name="/rmos_processer_r/AimTarget_r"
                  list_name="ExceptSentry" 
                /> 
              </Sequence>
              <!-- 所有 -->
              <Sequence>
                <Action ID="SetLeftTarget" service_name="/rmos_processer_l/AimTarget_l"
                  list_name="All" 
                />
                <Action ID="SetRightTarget" service_name="/rmos_processer_r/AimTarget_r"
                  list_name="All" 
                /> 
              </Sequence>
            </Fallback>
            <Fallback>
              <Action ID="RmulPatrol" service_name="nav_goal"/>
              <Condition ID="gameStart"/> <!-- TODO : 强制正确 -->
            </Fallback>
          </Sequence>
          <!-- ///////////////// -->

        </Fallback>
        
      </Sequence>

      <Action ID="GoBack" service_name="nav_goal"/>
    </Fallback>
  </BehaviorTree>

</root>
