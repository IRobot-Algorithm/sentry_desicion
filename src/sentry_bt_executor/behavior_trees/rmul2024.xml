<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
  <!-- ///// 此树用于2024联盟赛 ///// -->
  <BehaviorTree ID="BehaviorTree">
    <Fallback>
      <Sequence>
        <Condition ID="gameStart"/>
        <Fallback>


          <!-- ///// 在补给区 回复够再出门 ///// -->
          <Sequence>
            <Condition ID="inSupply"/>
            <Condition ID="rmulCanSupply"/>
            <Inverter>
              <Condition ID="enoughHp"/>
            </Inverter>
            <AlwaysSuccess>
              <Action ID="RmulGoSupply" service_name="nav_goal"/>
            </AlwaysSuccess>
          </Sequence>

          <!-- ///// 血量低可以补给前往补给区 ///// -->
          <Sequence>
            <Condition ID="lowHp"/>
            <Condition ID="rmulCanSupply"/>
            <AlwaysSuccess>
              <Action ID="RmulGoSupply" service_name="nav_goal"/>
            </AlwaysSuccess>
          </Sequence>

          <!-- ///// 血量低不能补给回家 ///// -->
          <Sequence>
            <Condition ID="lowHp"/>
            <AlwaysSuccess>
              <Action ID="GoBack" service_name="nav_goal"/>
            </AlwaysSuccess>
          </Sequence>
          
          <!-- ///// 有目标给导航发有目标 ///// -->
          <Sequence>
            <Condition ID="haveTarget"/>
            <Action ID="SetNavTarget" service_name="nav_target" 
              have_target="{have_target}" 
              gimbal="{gimbal}" 
              target_pos="{target_pos}"
            />
          </Sequence>

          <!-- ///// 三点轮询 ///// -->
          <AlwaysSuccess>
            <Sequence>
              <Action ID="RmulPatrol" service_name="nav_goal"/>
              <Action ID="RmulPatrol2" service_name="nav_goal"/>
              <Action ID="GoBack" service_name="nav_goal"/>
              <Action ID="RmulPatrol2" service_name="nav_goal"/>
            </Sequence>
          </AlwaysSuccess>


        </Fallback>
      </Sequence>

      <Action ID="GoBack" service_name="nav_goal"/>
    </Fallback>
  </BehaviorTree>

</root>
